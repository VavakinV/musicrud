<h1 class="song-title"><%= @song.title %></h1>

<div class="song-details">
  <p>
    <strong>Artist:</strong> <%= link_to @song.release.artist.name, @song.release.artist, class: "artist-link" %>
  </p>
  <p>
    <strong>Length:</strong> <span class="song-length"><%= @song.formatted_length %></span>
  </p>

  <p>
    <strong>Song number <%= @song.order_in_release %> on:</strong> 
    <%= link_to @song.release.title, @song.release, class: "song-release-link" %>
  </p>
</div>

<div class="song-actions">
  <%= link_to "Edit this song", edit_song_path(@song), class: "edit-link" %>
  <%= form_with model: @song, method: :delete, class: "delete-form" do |form| %>
    <button type="submit" onclick="return confirm('Are you sure?')" class="delete-button" >
      Delete this song
    </button>
  <% end %>
</div>

<hr>

<%= link_to "Back to songs", songs_path, class: "back-link" %>
