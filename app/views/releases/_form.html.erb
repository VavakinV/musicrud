<%= form_with model: release do |form| %>
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, placeholder: "Enter the release title" %>
    </div>

    <div class="form-group">
        <%= form.label :release_type %>
        <%= form.select :release_type, options_for_select(["Album", "Single", "EP", "Compilation", "Mixtape", "Additional"]), prompt: "Select a type" %>
    </div>

    <div class="form-group">
        <%= form.label :date_of_release %>
        <%= form.date_field :date_of_release %>
    </div>

    <div class="form-group">
        <%= form.label :genre %>
        <%= form.text_field :genre, placeholder: "Enter the genre (e.g., Rock, Pop)" %>
    </div>

    <div class="form-group">
        <%= form.label :language %>
        <%= form.text_field :language, placeholder: "Enter the language (e.g., English, Spanish)" %>
    </div>

    <div class="form-group">
        <%= form.label :artist_id, "Artist" %>
        <%= form.collection_select :artist_id, Artist.all, :id, :name, prompt: "Select an artist" %>
    </div>

    <div class="form-group">
        <%= form.label :cover, style: "display: block" %>
        <%= form.file_field :cover, accept: "image/*" %>
    </div>

    <div class="form-actions">
        <%= form.submit%>
    </div>
<% end %>